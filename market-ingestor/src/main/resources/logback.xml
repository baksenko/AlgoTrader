<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} â€” %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Market Ingestor loggers -->
    <logger name="com.algotrader.ingestor" level="DEBUG" />
    <logger name="com.algotrader.shared" level="INFO" />

    <!-- Suppress noisy Lettuce/Netty logs -->
    <logger name="io.lettuce" level="WARN" />
    <logger name="io.netty" level="WARN" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
